<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <size android:height="12dp"/> <!-- Total height including padding -->
    <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
    <padding
        android:top="8dp"
        android:bottom="8dp"/>
    <corners android:radius="8dp"/>
    <stroke android:width="0dp" android:color="@android:color/transparent"/>
    <!-- The actual visible bar should be drawn in the progress layer -->
</shape>