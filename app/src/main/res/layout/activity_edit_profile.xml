<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.perfumos.ui.dashboad.fragment_folder.profile_folder.EditProfileVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboad.fragment_folder.profile_folder.EditProfile">




        <ImageView
            android:id="@+id/bg_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/glass"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_dark_img"
            android:adjustViewBounds="true" />


        <androidx.core.widget.NestedScrollView
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"

                    android:layout_marginStart="@dimen/_15sdp"
                    android:onClick="@{v-> vm.onClick(v)}"
                    android:src="@drawable/ic_back_btn"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/headingTitle"
                    style="@style/CustomAliceTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/edit_profile"
                    android:textColor="@color/headerColor1"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/editCC"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/profle_barground_color"
                    app:layout_constraintTop_toBottomOf="@+id/headingTitle">

                    <com.tech.perfumos.utils.GradientStrokeImageView2
                        android:id="@+id/userProfile"
                        android:layout_width="@dimen/_126sdp"
                        android:layout_height="@dimen/_126sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:src="@drawable/dummy_image"
                        android:onClick="@{v->vm.onClick(v)}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/changePicture"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/change_picture"
                        android:textColor="@color/text_secondary_color1"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userProfile" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height=".5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/themeTextView1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/changePicture" />

                    <TextView
                        android:id="@+id/name"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"

                        android:gravity="center"
                        android:text="@string/name"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/text_secondary_color"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/nameEt"
                        style="@style/CustomAliceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/changepass_background"
                        android:gravity="start|center"
                        android:hint="James Franco"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:nextFocusForward="@id/otpET2"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/themeTextView"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name" />


                    <TextView
                        android:id="@+id/Username"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="@string/username"
                        android:textColor="@color/text_secondary_color"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameEt" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edUsername"
                        style="@style/CustomAliceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/changepass_background"
                        android:gravity="start|center"
                        android:hint="James@username123"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:nextFocusForward="@id/otpET2"
                        android:paddingLeft="@dimen/_10sdp"


                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Username" />


                    <TextView
                        android:id="@+id/email_address"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="@string/email_address"
                        android:textColor="@color/text_secondary_color"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edUsername" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/email_addressET"
                        style="@style/CustomAliceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/changepass_background"
                        android:gravity="start|center"
                        android:hint="James@username.com"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:nextFocusForward="@id/otpET2"
                        android:paddingLeft="@dimen/_10sdp"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email_address" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        app:layout_constraintTop_toBottomOf="@+id/email_addressET" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tvUpdate"
                    style="@style/CustomAliceTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Update"
                    android:backgroundTint="@color/gradient1"
                    android:background="@drawable/follow_icon_bag"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:onClick="@{v-> vm.onClick(v)}"
                    android:paddingHorizontal="@dimen/_30sdp"
                    android:paddingVertical="@dimen/_5sdp"

                    app:layout_constraintEnd_toEndOf="@+id/editCC"
                    app:layout_constraintStart_toStartOf="@+id/editCC"
                    app:layout_constraintTop_toBottomOf="@+id/editCC"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>