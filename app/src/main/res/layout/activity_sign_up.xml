<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.perfumos.ui.auth_folder.create_folder.SignUpVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth_folder.create_folder.SignUpActivity">

        <ImageView
            android:id="@+id/bg_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glass" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:layout_marginStart="-40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_ruby"
                app:layout_constraintBottom_toBottomOf="@+id/guideline1"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_85sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/hatman_login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.84" />

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="-45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/red_pot_login"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_96sdp"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/yellow_diamond_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="-55dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pot_loging"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:onClick="@{v-> vm.onClick(v)}"
                    android:src="@drawable/ic_back_btn"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:id="@+id/headingTitle"
                    style="@style/CustomAliceTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:onClick="@{v-> vm.onClick(v)}"
                    android:text="@string/hello_register_to_get_started"
                    android:textColor="@color/color_forget_pass"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/back_btn" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/username"
                    style="@style/CustomAliceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/changepass_background"
                    android:gravity="start|center"
                    android:hint="@string/username"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@id/otpET2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/headingTitle" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/fullname"
                    style="@style/CustomAliceEditText"
                    android:layout_width="match_parent"
                       android:layout_height="@dimen/_45sdp"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/changepass_background"
                    android:gravity="start|center"
                    android:hint="@string/fullname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@id/otpET2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/username" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email_address"
                    style="@style/CustomAliceEditText"
                    android:layout_width="match_parent"
                       android:layout_height="@dimen/_45sdp"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/changepass_background"
                    android:gravity="start|center"
                    android:hint="@string/email_address"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@id/otpET2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fullname" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password"
                    style="@style/CustomAliceEditText"
                    android:layout_width="match_parent"
                       android:layout_height="@dimen/_45sdp"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/changepass_background"
                    android:gravity="start|center"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:nextFocusForward="@id/otpET2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_35sdp"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_address" />

                <ImageView
                    android:id="@+id/ivShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:src="@drawable/icon_eye"
                    app:layout_constraintBottom_toBottomOf="@+id/password"
                    app:layout_constraintEnd_toEndOf="@+id/password"
                    app:layout_constraintTop_toTopOf="@+id/password" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/passwordConfirm"
                    style="@style/CustomAliceEditText"
                    android:layout_width="match_parent"
                       android:layout_height="@dimen/_45sdp"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/changepass_background"
                    android:gravity="start|center"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:nextFocusForward="@id/otpET2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_35sdp"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password" />

                <ImageView
                    android:id="@+id/ivConfShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:src="@drawable/icon_eye"
                    app:layout_constraintBottom_toBottomOf="@+id/passwordConfirm"
                    app:layout_constraintEnd_toEndOf="@+id/passwordConfirm"
                    app:layout_constraintTop_toTopOf="@+id/passwordConfirm" />


                <LinearLayout
                    android:id="@+id/getVerifyLayout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/gradient_background"
                    android:onClick="@{v ->vm.onClick(v)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passwordConfirm">

                    <TextView

                        style="@style/CustomAliceTextview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/register"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginHorizontal="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:background="@color/themeTextView20"
                    app:layout_constraintTop_toBottomOf="@+id/getVerifyLayout" />

                <LinearLayout
                    android:id="@+id/resendTv2LL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider">

                    <TextView
                        android:id="@+id/resendTv"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="@string/already_have_an_account"
                        android:textColor="@color/home_heading"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/resendTv2"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:gravity="center|start"

                        android:onClick="@{v-> vm.onClick(v)}"
                        android:text="@string/login_now"
                        android:textColor="@color/select_dot_indicator"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!--                    <TextView-->
                <!--                        android:id="@+id/resendTv"-->
                <!--                        style="@style/CustomAliceTextview"-->
                <!--                        android:layout_width="0dp"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginTop="@dimen/_20sdp"-->
                <!--                        android:gravity="center"-->
                <!--                        android:text="@string/already_have_an_account"-->
                <!--                        android:textColor="@color/home_heading"-->
                <!--                        android:textSize="@dimen/_10ssp"-->
                <!--                        android:textStyle="normal"-->
                <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                <!--                        app:layout_constraintStart_toStartOf="parent"-->
                <!--                        app:layout_constraintTop_toBottomOf="@+id/divider" />-->

                <!--                    <TextView-->
                <!--                        android:onClick="@{v ->vm.onClick(v)}"-->
                <!--                        android:id="@+id/resendTv2"-->
                <!--                        style="@style/CustomAliceTextview"-->
                <!--                        android:layout_width="0dp"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginEnd="@dimen/_50sdp"-->
                <!--                        android:gravity="center|start"-->
                <!--                        android:text="@string/login_now"-->
                <!--                        android:textColor="@color/select_dot_indicator"-->
                <!--                        android:textSize="@dimen/_10ssp"-->
                <!--                        android:textStyle="normal"-->
                <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                <!--                        app:layout_constraintTop_toTopOf="@+id/resendTv" />-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    app:layout_constraintTop_toBottomOf="@+id/resendTv2LL" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>