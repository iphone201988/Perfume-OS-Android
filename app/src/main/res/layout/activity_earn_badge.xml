<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="selectTap"
            type="Integer" />

        <variable
            name="vm"
            type="com.tech.perfumos.ui.dashboad.fragment_folder.home_folder.HomeFragmentVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboad.fragment_folder.home_folder.EarnBadgeActivity">

        <ImageView
            android:id="@+id/bg_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/glass"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_dark_img"
            android:adjustViewBounds="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:onClick="@{v-> vm.onClick(v)}"
                android:src="@drawable/ic_back_btn"
                android:layout_marginTop="@dimen/_30sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/headingTitle"
                style="@style/CustomAliceTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/badges"
                android:textColor="@color/home_heading"
                android:textSize="@dimen/_16ssp"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/_30sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/bgStrokeFill35_50"
                app:layout_constraintTop_toBottomOf="@+id/back_btn"
                android:paddingVertical="@dimen/_5sdp"
                >

                <LinearLayout
                    android:id="@+id/llRanks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@+id/view1"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvRanks"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="@string/ranks"
                        android:textColor="@{selectTap==1?@color/profile_section_selected:@color/profile_section_unselected}"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@{selectTap==1?@color/profile_section_selected:@android:color/transparent}" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@color/colorAccentDark"
                    app:layout_constraintBottom_toBottomOf="@+id/llRanks"
                    app:layout_constraintEnd_toStartOf="@+id/llBadges"

                    app:layout_constraintStart_toEndOf="@+id/llRanks"
                    app:layout_constraintTop_toTopOf="@+id/llRanks"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:id="@+id/llBadges"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/view1"

                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvbadges"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:gravity="center"
                        android:text="@string/badges"
                        android:textColor="@{selectTap==2?@color/profile_section_selected:@color/profile_section_unselected}"

                        android:textSize="@dimen/_12ssp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@{selectTap==2?@color/profile_section_selected:@android:color/transparent}" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"

                app:layout_constraintTop_toBottomOf="@+id/clTabs"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBadges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    app:spanCount="3"
                    android:visibility="gone"
                    tools:listitem="@layout/language_rv_item"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/earn_rank_item_view"
                    android:paddingBottom="@dimen/_20sdp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>