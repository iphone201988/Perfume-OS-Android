<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.tech.perfumos.ui.auth_folder.verfication_otp_folder.OtpVerificationVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth_folder.forget_password.ForgetPassword">

         <!--   <com.tech.perfumos.utils.BgAnimation
            android:id="@+id/waveView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false" />-->


        <ImageView
            android:id="@+id/bg_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/glass"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:layout_marginStart="-40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_ruby"
                app:layout_constraintBottom_toBottomOf="@+id/guideline1"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_85sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/hatman_login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.84" />

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="-45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/red_pot_login"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_96sdp"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/yellow_diamond_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="-55dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pot_loging"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:fitsSystemWindows="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:onClick="@{v-> vm.onClick(v)}"
                        android:src="@drawable/ic_back_btn"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView

                        android:id="@+id/headingTitle"
                        style="@style/CustomAliceTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_155sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center"

                        android:text="@string/otp_verification"
                        android:textColor="@color/color_forget_pass"
                        android:textSize="@dimen/_25ssp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/headingSubTitle"
                        style="@style/CustomAliceTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"

                        android:text="@string/enter_the_verification_code_we_just_sent_on_your_email_address"
                        android:textColor="@color/custom_text_color"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"


                        app:layout_constraintTop_toBottomOf="@+id/headingTitle" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clOtt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/headingSubTitle">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/otpET1"
                            style="@style/CustomUrbanistEditText"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:background="@drawable/track_background"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:nextFocusForward="@id/otpET2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/otpET2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/otpET2"
                            style="@style/CustomUrbanistEditText"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:background="@drawable/track_background"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:nextFocusForward="@id/otpET3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/otpET1"
                            app:layout_constraintEnd_toStartOf="@+id/otpET3"
                            app:layout_constraintStart_toEndOf="@+id/otpET1"
                            app:layout_constraintTop_toTopOf="@+id/otpET1" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/otpET3"
                            style="@style/CustomUrbanistEditText"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:background="@drawable/track_background"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:nextFocusForward="@id/otpET4"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/otpET1"
                            app:layout_constraintEnd_toStartOf="@+id/otpET4"
                            app:layout_constraintStart_toEndOf="@+id/otpET2"
                            app:layout_constraintTop_toTopOf="@+id/otpET1" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/otpET4"
                            style="@style/CustomUrbanistEditText"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:background="@drawable/track_background"
                            android:gravity="center"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/otpET1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/otpET3"
                            app:layout_constraintTop_toTopOf="@+id/otpET1" />


                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <LinearLayout
                        android:id="@+id/getVerifyLayout"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/gradient_background"
                        android:onClick="@{v ->vm.onClick(v)}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clOtt">

                        <TextView

                            style="@style/CustomAliceTextview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/verify"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginHorizontal="@dimen/_110sdp"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:background="@color/themeTextView20"
                        app:layout_constraintTop_toBottomOf="@+id/getVerifyLayout" />

<!--                    <TextView-->
<!--                        android:id="@+id/resendTv"-->
<!--                        style="@style/CustomAliceTextview"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/_20sdp"-->
<!--                        android:gravity="center"-->
<!--                        android:text="@string/didn_t_received_code"-->
<!--                        android:textColor="@color/home_heading"-->
<!--                        android:textSize="@dimen/_10ssp"-->
<!--                        android:textStyle="normal"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@+id/divider" />-->

<!--                    <TextView-->
<!--                        android:onClick="@{v ->vm.onClick(v)}"-->
<!--                        android:id="@+id/resendTv2"-->
<!--                        style="@style/CustomAliceTextview"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginEnd="@dimen/_55sdp"-->
<!--                        android:gravity="center|start"-->
<!--                        android:text="@string/login_now"-->
<!--                        android:textColor="@color/select_dot_indicator"-->
<!--                        android:textSize="@dimen/_10ssp"-->
<!--                        android:textStyle="normal"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="@+id/resendTv" />-->
                    <LinearLayout
                        android:id="@+id/resendTv2LL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider">

                        <TextView
                            android:id="@+id/resendTv"
                            style="@style/CustomAliceTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="@string/didn_t_received_code"
                            android:textColor="@color/home_heading"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/resendTv2"
                            style="@style/CustomAliceTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:gravity="center|start"

                            android:onClick="@{v-> vm.onClick(v)}"
                            android:text="@string/resend"
                            android:textColor="@color/select_dot_indicator"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        app:layout_constraintTop_toBottomOf="@+id/resendTv2LL" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>