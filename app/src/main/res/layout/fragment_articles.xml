            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMightLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/might_like_perfume_item_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_might_like"
                />

            <TextView
                android:id="@+id/noRecommendedFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice_regular"
                android:text="No Record Found"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvMightLike"
                app:layout_constraintBottom_toTopOf="@+id/headingTitle"
                android:layout_marginBottom="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/headingTitle"
                style="@style/CustomAliceTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:text="@string/articles_for_you"
                android:textColor="@color/home_heading"
                android:textSize="@dimen/_20ssp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvMightLike"

                />

