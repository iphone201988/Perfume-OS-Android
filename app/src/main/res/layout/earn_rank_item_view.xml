<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="size"
            type="Integer" />

        <variable
            name="callback"
            type="com.tech.perfumos.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.tech.perfumos.ui.dashboad.fragment_folder.home_folder.model.RankList" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{v->callback.onItemClick(v, bean, pos)}"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-40dp"
            android:background="@drawable/rounded_rectangle_background"
            android:paddingVertical="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/imagePerfume"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagePerfume"
            app:layout_constraintTop_toTopOf="@+id/imagePerfume">

            <TextView
                android:id="@+id/tvRankTitle"
                style="@style/CustomAliceTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="@{bean.name}"
                android:textColor="@color/headerColor"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Novice Nose" />

            <!-- android:text="@{size == pos-1?String.valueOf(bean.min+'+'):String.valueOf(bean.min+' '-' '+bean.max)}"-->
            <TextView
                android:id="@+id/tvRank"
                style="@style/CustomAliceTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="@{(pos == size-1) ? String.valueOf(bean.min) + ' '+'+' : String.valueOf(bean.min) + ' '+'-'+' ' + String.valueOf(bean.max)}"
                android:textColor="@color/headerColor"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="@+id/tvRankTitle"
                app:layout_constraintStart_toStartOf="@+id/tvRankTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvRankTitle"
                tools:text="0 â€“ 99" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagePerfume"
            loadImage="@{bean.currentRank == true?bean.image:bean.otherImage}"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/earn_badge_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>